        feedStatusService.updateFeedStatus(id)
                .setStatus(status)
                .update();
    }

    public void updateErrorMessage(Long id, String errorMessage) {
        feedStatusService.updateFeedStatus(id)
                .setErrorMessage(errorMessage)
                .update();
    }
}

dvantages of This Approach
